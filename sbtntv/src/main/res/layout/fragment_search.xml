<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <net.soulwolf.widget.ratiolayout.widget.RatioImageView
        android:id="@+id/icon_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/icon_voice_search"
        android:visibility="gone"
        app:datumRatio="datumHeight"
        app:heightRatio="1.0"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="5%"
        app:widthRatio="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Gray"
        android:orientation="horizontal"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginRightPercent="20%"
        app:layout_marginTopPercent="5%">


        <net.soulwolf.widget.ratiolayout.widget.RatioImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/icon_app"
            app:datumRatio="datumHeight"
            app:heightRatio="1.0"
            app:widthRatio="1.0" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:hint="Speak to search SBTN"
            android:textColor="@color/white_tv"
            android:textColorHint="@color/DimGray" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</android.support.percent.PercentRelativeLayout>

