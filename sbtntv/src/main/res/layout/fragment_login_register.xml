<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_app_sbtn"
        app:layout_marginBottomPercent="35%"
        app:layout_marginRightPercent="70%"
        app:layout_widthPercent="16%" />

    <!--app:datumRatio="datumWidth"-->
    <!--app:heightRatio="1"-->
    <!--app:widthRatio="1"-->

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_marginLeftPercent="30%">

        <LinearLayout
            android:id="@+id/layout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_marginRightPercent="25%"
            tools:visibility="gone">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:background="@drawable/statelist_button_forgot_pass"
                android:drawableLeft="@drawable/icon_email"
                android:drawablePadding="15dp"
                android:hint="Email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:layout_marginTop="25dp"
                android:background="@drawable/statelist_button_forgot_pass"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="15dp"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btLogInSubmit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/statelist_button"
                    android:text="Login"
                    android:textAppearance="@android:style/TextAppearance.Medium" />

                <Button
                    android:id="@+id/btSignUpNext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/statelist_button"
                    android:text="Go to Sign Up"
                    android:textAppearance="@android:style/TextAppearance.Medium" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btFBLogIn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:layout_marginTop="25dp"
                android:background="@drawable/statelist_button_fb"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="Login with Facebook"
                    android:textAppearance="@android:style/TextAppearance.Medium" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_facebook" />

            </RelativeLayout>

            <Button
                android:id="@+id/btForgotPass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:layout_marginTop="25dp"
                android:background="@drawable/statelist_button_forgot_pass"
                android:gravity="center"
                android:padding="10dp"
                android:text="Forgot your password ?"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_marginRightPercent="25%"
            tools:visibility="visible">

            <EditText
                android:id="@+id/edtEmailSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:background="@drawable/statelist_button_forgot_pass"
                android:drawableLeft="@drawable/icon_email"
                android:drawablePadding="15dp"
                android:hint="Email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <EditText
                android:id="@+id/edtPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:layout_marginTop="25dp"
                android:background="@drawable/statelist_button_forgot_pass"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="15dp"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textAppearance="@android:style/TextAppearance.Medium" />


            <EditText
                android:id="@+id/edtPasswordConfirmSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:layout_marginTop="25dp"
                android:background="@drawable/statelist_button_forgot_pass"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="15dp"
                android:hint="Password Confirm"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btSignUpSubmit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/statelist_button"
                    android:text="Sign Up"
                    android:textAppearance="@android:style/TextAppearance.Medium" />

                <Button
                    android:id="@+id/btLogInBack"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/statelist_button"
                    android:text="Go to Login"
                    android:textAppearance="@android:style/TextAppearance.Medium" />

            </LinearLayout>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>