<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.sbtn.androidtv.customs.views.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_app_sbtn"
        app:civ_border_color="@color/white_tv"
        app:layout_marginBottomPercent="35%"
        app:layout_marginRightPercent="70%"
        app:layout_widthPercent="16%" />

    <!--app:datumRatio="datumWidth"-->
    <!--app:heightRatio="1"-->
    <!--app:widthRatio="1"-->

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_marginLeftPercent="30%">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_marginRightPercent="25%"
            tools:visibility="visible">


            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="Name : "
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="Email : "
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <Button
                android:id="@+id/btLogOut"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_control_button_secondary_height"
                android:layout_marginTop="25dp"
                android:background="@drawable/statelist_button"
                android:gravity="center"
                android:padding="10dp"
                android:text="Log Out"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>