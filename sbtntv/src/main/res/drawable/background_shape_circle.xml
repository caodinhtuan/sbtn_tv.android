<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <corners android:radius="5dp" />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:type="linear" />
    <padding
        android:bottom="2dp"
        android:left="10dp"
        android:right="10dp"
        android:top="2dp" />
    <size
        android:width="100dp"
        android:height="100dp" />
    <stroke
        android:width="2dp"
        android:color="@color/white" />
    <solid android:color="@color/blue_theme" />
</shape>